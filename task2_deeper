#include <iostream>
#include <cmath>
#include <iomanip>

using namespace std;


int main()
{
    setlocale(LC_ALL, "RU"); // українського кодування на жаль не знайшов 

    int x, y;
    cout << "Введіть значення абсциси точки А:";
    cin >> x;
    cout << "Введіть значення ординати точки А:";
    cin >> y;

    int pict;
    cout << "Виберіть до якого малюнку бажаєте виконати завдання(1 чи 2):";
    cin >> pict;

    if (pict == 1) {
        if (x >= -4 && x <= 0 && y >= -4 && y <= 0 || x >= 2 && x <= 4 && y >= 2 && y <= 4) {
            cout << "Ваша точка належить малюнку 1";
        }

        else {
            cout << "Ваша точка не належить області";
        }
    } 
    else {
        if (x >= 0 && x <= 3 && y >= -3 && y <= 3) {
            cout << "Ваша точка належить малюнку 2";
        }
        else if (abs(x) >= y) {
            cout << "Ваша точка належить малюнку 2";
        }
        else {
            cout << "Ваша точка не належить області";
        }
    }
  

    return 0;
}


