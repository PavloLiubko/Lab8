#include <iostream>
#include <cmath>
#include <iomanip>

using namespace std;

int main()
{
    setlocale(LC_ALL, "RU"); // українського кодування на жаль не знайшов 
    
    int num;
    cout << "Введіть номер якогось місяця:";
    cin >> num;

    if (num >= 1 && num <= 2 || num == 12) {
        cout << "Ваш місяць наступає зимою";
    }
    else if (num >= 3 && num <= 5) {
        cout << "Ваш місяць наступає весною";
    }
    else if (num >= 6 && num <= 8) {
        cout << "Ваш місяць наступає літом";
    }
    else if (num >= 9 && num <= 11) {
        cout << "Ваш місяць наступає осінню";
    }
    else {
        cout << "Місяця з таким номером нема";
    }

    return 0;
}


